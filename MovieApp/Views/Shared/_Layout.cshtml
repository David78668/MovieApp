<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MovieApp.styles.css" asp-append-version="true" />
    <style>
        .navbar-nav .nav-item {
            border-right: 1px solid rgba(255, 255, 255, 0.3);
        }

            .navbar-nav .nav-item:last-child {
                border-right: none;
            }

            .navbar-nav .nav-item:hover {
                background-color: rgba(255, 255, 255, 0.1);
            }
    </style>
</head>
<body class="bg-black text-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow p-0 mb-3">
            <div class="container-fluid p-0">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-fill">
                        <li class="nav-item flex-fill text-center p-1">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Search</a>
                        </li>
                        <li class="nav-item flex-fill text-center p-1">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Watchlist">Watchlist</a>
                        </li>
                        <li class="nav-item flex-fill text-center p-1">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="TopMovies">Top 250 Movies</a>
                        </li>
                        <li class="nav-item flex-fill text-center p-1">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Search</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
